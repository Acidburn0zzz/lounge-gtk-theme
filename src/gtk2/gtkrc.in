# Based on Bridge by ScionicSpectre
# vim:set ts=2 sw=2 sts=2 ai et:
#
# This is the GTK+ 2 version of Adwaita. It's whole purpose is to look as the
# GTK+ 3 version as much as possible until GTK+ 2 dies completely.
#
# Note: comments for explaining styles are on the bottom of each file beside the
# widget matches.

# Declare the colours used throughout the theme.
# There shouldn't be any fiddling with them in the theme files themselves in
# order to not mess up the dark theme.

# Text/base
$light gtk-color-scheme = "text_color:black\nbase_color:white"
$dark gtk-color-scheme = "text_color:#c8c8c8\nbase_color:#272929"
# Foreground/background
$light gtk-color-scheme = "fg_color:#101010\nbg_color:#eeeeee"
$dark gtk-color-scheme = "fg_color:#c8c8c8\nbg_color:#353839"
#Â Selected foreground/background
$light gtk-color-scheme = "selected_fg_color:#101010\nselected_bg_color:#c1ddfd"
$dark gtk-color-scheme = "selected_fg_color:#d4d4d4\nselected_bg_color:#2d68ac"
# Insensitive foreground/background
$light gtk-color-scheme = "insensitive_fg_color:#959595\ninsensitive_bg_color:#f5f5f5"
$dark gtk-color-scheme = "insensitive_fg_color:#707272\ninsensitive_bg_color:#323536"
# Menus
$light gtk-color-scheme = "menu_color:#fbfbfb"
$dark gtk-color-scheme = "menu_color:#2d2f2f"
# Links
$light gtk-color-scheme = "link_color:#2f72b5\nvisited_link_color:#25598d"
$dark gtk-color-scheme = "link_color:#4e8cc9\nvisited_link_color:#3877b7"
# Treeview headers
$light gtk-color-scheme = "column_header_color:#979a9b\nhover_column_header_color:#636769"
$dark gtk-color-scheme = "column_header_color:#979a9b\nhover_column_header_color:#636769"
# Window decoration
$light gtk-color-scheme = "window_color:#f8f8f8"
$dark gtk-color-scheme = "window_color:#303334"
# Tooltips
$light gtk-color-scheme = "tooltip_fg_color:#101010\ntooltip_bg_color:#dfddd9"
$dark gtk-color-scheme = "tooltip_fg_color:#c8c8c8\ntooltip_bg_color:#252828"

# Set GTK settings
gtk-auto-mnemonics              = 1
gtk-primary-button-warps-slider = 1

# And hand over the control to the theme files
include "main.rc"
include "apps.rc"
include "hacks.rc"
include "xfce.rc"
